<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/background_weather"
    android:gravity="center"
    android:minHeight="500dp"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:layout_marginVertical="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/dateD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-medium"
            android:text="Tue Jun 28"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/timeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-medium"
            android:text="15:00"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>



    <ImageView
        android:id="@+id/weatherIconD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:minHeight="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/weatherTypeD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Cloudy"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/weatherTempD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="30Â°"
            android:textAlignment="center"
            android:textSize="52sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weatherTempHeightD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:text="H:20"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/weatherTempLowD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="1dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:text="L:35"
                android:textSize="20sp"
                android:textStyle="normal" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/humidityImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/humidity_percentage" />

            <TextView
                android:id="@+id/humidityTextD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="22%"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Humidity"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/windImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/air" />

            <TextView
                android:id="@+id/windTextD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="15km/h"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Wind"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/cloudImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cloud" />

            <TextView
                android:id="@+id/cloudTextD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="20%"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Clouds"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pressureImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_compress_24" />

            <TextView
                android:id="@+id/pressureTextD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1.013"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pressure"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/visibilityImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_disabled_visible_24" />

            <TextView
                android:id="@+id/visibilityTextD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10km"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Visibility"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/feelsImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_thermostat_24" />

            <TextView
                android:id="@+id/feelsTextD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="35Â°"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Feels"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


